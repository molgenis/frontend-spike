{
  "name": "@molgenis/frontend",
  "workspaces": [
    "molgenis",
    "theme/default"
  ],
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=14.0.0",
    "yarn": ">= 1.19.0"
  },
  "scripts": {
    "build": "./cli.js build",
    "lint": "yarn lint:js;yarn lint:scss",
    "lint:js": "eslint \"{molgenis}/**/{*.js,*.vue}\"",
    "lint:scss": "stylelint 'molgenis/**/*.scss'",
    "prepare": "yarn snowpack",
    "release": "standard-version",
    "snowpack": "snowpack"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "**/*.js": "eslint",
    "**/*.scss": "stylelint"
  },
  "devDependencies": {
    "@garage11/vue-eslint-parser": "^8.0.0",
    "@garage11/vuepack": "1.2.0",
    "@rollup/plugin-commonjs": "^11.0.2",
    "@rollup/plugin-node-resolve": "^7.1.3",
    "@rollup/plugin-replace": "^2.3.2",
    "archy": "^1.0.0",
    "babel-eslint": "^10.1.0",
    "chalk": "^3.0.0",
    "chokidar": "^3.3.1",
    "clean-css": "^4.2.3",
    "connect": "^3.7.0",
    "del": "2.x.x",
    "eslint": "7.x.x",
    "eslint-plugin-sort-class-members": "1.x.x",
    "fs-extra": "^8.1.0",
    "globby": "^11.0.0",
    "husky": "3.x.x",
    "imagemin": "^7.0.1",
    "imagemin-jpegtran": "^6.0.0",
    "imagemin-pngquant": "^8.0.0",
    "lint-staged": "^10.2.11",
    "lodash": "^4.17.15",
    "node-sass": "^4.13.1",
    "node-sass-glob-importer": "^5.3.2",
    "rc": "^1.2.8",
    "rollup": "^1.31.1",
    "rollup-plugin-postcss": "^3.1.5",
    "rollup-plugin-terser": "^5.2.0",
    "snowpack": "2.x.x",
    "stylelint": "13.x.x",
    "stylelint-order": "4.x.x",
    "stylelint-scss": "3.x.x",
    "tildify": "^2.0.0",
    "tiny-lr": "^1.1.1",
    "vue-template-compiler": "^2.6.11",
    "yargs": "^15.3.1"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    }
  },
  "dependencies": {
    "rollup-plugin-root-import": "^1.0.0"
  }
}
